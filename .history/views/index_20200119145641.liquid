{% layout 'layout' %}
{% block 'header' %}
    {% include './public/resources/header.liquid' %}
{% endblock %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div>
                    <legend>Checklist</legend>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">File</th>
                                <th scope="col" class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Themes/Config/filestack_data.json</td>
                                <td class="text-center">
                                    {% if filastackApi %}
                                        <i class="material-icons md-18">check</i>
                                    {% else %}
                                        Not Found
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-4 offset-md-1">
               <div class="alert alert-info">
                    <strong>NOTE:</strong><br/>
                    This guides is important for filestack to work. And other configuration.
                </div>
                <div class="card">
                    <div class="card-header">
                        Filestack API
                        <span id="edit_API"><i class="material-icons md-18">edit</i> </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            {% if filastackApi %}
                                {{filastackApi}}
                            {% else %}
                                --
                            {% endif %}
                        </h5>
                        <form action="/" method="post" id="frmApi" class="hide">
                            <hr/>
                            <div class="form-group">
                                <input class="form-control" name="fs_API" value="" required/>
                            </div>
                            <button type="button" class="btn btn-danger" id="cancel">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
                 <!--<div class="list-group">
                    <a href="/products" class="list-group-item list-group-item-action">Products</a>
                    <a href="/orders" class="list-group-item list-group-item-action">Orders</a>
                  </div>-->
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function() {
        filestactShopify.runIndex();
    });
</script>
{% block 'footer' %}
    {% include './public/resources/footer.liquid' %}
{% endblock %}