<h1>{{title}}</h1>
<form method="POST" action="/">
    <input type="hidden" name="metafieldId" value="{{metafieldId}}"/>
    <table>
        <tr>
            <td>Widget Title</td>
            <td><input type="text" name="title" value="{{metavalue.pointWidgetTitle}}"/></td>
        </tr>
        <tr>
            <td>Token</td>
            <td><input type="text" name="token" value="{{metavalue.pointWidgetToken}}"/></td>
        </tr>
        <tr>
            <td>Server address</td>
            <td><input type="text" name="server" value="{{metavalue.pointWidgetServer}}"/></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: right;">
                <input type="submit" name="submit" value="Submit"/>
            </td>
        </tr>
    </table>
</form>
